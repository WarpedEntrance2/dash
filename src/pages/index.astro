---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import DashboardWidget from '../components/DashboardWidget.astro';
---

<DefaultLayout title="Dashboard">
  <section>
    <h1>Welcome</h1><br>
    <p class="size-20">Unblocked Games By the day!</p>
  </section>
  <section class="margin-32">
    <div class="space-content">
      <div class="contents">
        <h2>Widgets</h2>
        <p id="current-time" class="size-12"></p>
      </div>
      <div class="grid small-grid-1 medium-grid-2 large-grid-3 equal-height">
        <DashboardWidget />
        <DashboardWidget
          number="+33"
          title="Products sold"
        />
        <DashboardWidget
          number="-120"
          title="Images deleted"
          type="error"
        />
      </div>
    </div>
  </section>
</DefaultLayout>

<script>
  const date = new Date()
  document.querySelector('#current-time').innerHTML = `<em>${date.toDateString()}</em>`
</script>
